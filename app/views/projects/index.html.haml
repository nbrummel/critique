%h1 Listing projects

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Location
      %th Category
      %th
      %th
      %th
      
  %tbody
    - @projects.each do |project|
      %tr
        %td= project.name
        %td= project.description
        %td= project.location
        %td= project.category
        %td= link_to 'Show', project
        %td= link_to 'Edit', edit_project_path(project)
        %td= link_to 'Destroy', project, :method => :delete, :data => { :confirm => 'Are you sure?' }

