<% if @project.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-danger">
			The form contains <%= pluralize(@project.errors.count, 'error') %>
		</div>
		<ul>
			<% @project.errors.full_messages.each do |msg| %>
				<li class="error-msg"><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>	